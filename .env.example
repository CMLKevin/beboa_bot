# Discord Bot Configuration
# Get these from https://discord.com/developers/applications

# Bot token from Discord Developer Portal
DISCORD_TOKEN=your_bot_token_here

# Your Discord application's client ID
CLIENT_ID=your_client_id_here

# Your Discord server (guild) ID
GUILD_ID=your_guild_id_here

# Channel IDs
# The #log-in channel where /checkin is allowed
CHECKIN_CHANNEL_ID=your_checkin_channel_id_here

# The #beboas-command-center channel for reward notifications
NOTIFICATION_CHANNEL_ID=your_notification_channel_id_here

# Role ID to ping when rewards are redeemed (e.g., @bebebebebebe)
ADMIN_ROLE_ID=your_admin_role_id_here

# ============================================
# OpenRouter AI Configuration (for Beboa chat)
# ============================================

# Your OpenRouter API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Model to use for chat (default: deepseek/deepseek-chat)
# Other options: anthropic/claude-3-haiku, x-ai/grok-4.1-fast, etc.
# See https://openrouter.ai/models for full list
OPENROUTER_MODEL=x-ai/grok-4.1-fast

# Maximum tokens in response (default: 500)
OPENROUTER_MAX_TOKENS=500

# Temperature for response creativity 0.0-2.0 (default: 0.9)
OPENROUTER_TEMPERATURE=0.9

# ============================================
# Memory & Embedding Models
# ============================================

# Model for generating text embeddings (semantic memory search)
# Must support embeddings endpoint
EMBEDDING_MODEL=qwen/qwen3-embedding-8b

# Model for image generation
# Must support image generation
IMAGE_MODEL=bytedance-seed/seedream-4.5

# Lightweight model for memory extraction (runs in background)
EXTRACTION_MODEL=x-ai/grok-4.1-fast

# ============================================
# Chat Feature Settings
# ============================================

# Cooldown between chat messages per user in seconds (default: 30)
CHAT_COOLDOWN_SECONDS=30

# Maximum conversation history to maintain (default: 10 message pairs)
CHAT_MAX_HISTORY=150

# Enable/disable chat feature (default: true)
CHAT_ENABLED=true

# ============================================
# Memory System Settings
# ============================================

# Enable/disable semantic memory (default: true)
MEMORY_ENABLED=true

# Automatically extract memories from conversations (default: true)
MEMORY_AUTO_EXTRACT=true

# Number of recent channel messages to include for context (default: 20)
CHANNEL_CONTEXT_LIMIT=20

# ============================================
# Tool System Settings
# ============================================

# Enable/disable AI tool calls (default: true)
TOOLS_ENABLED=true

# Enable/disable image generation tool (default: true)
IMAGE_GEN_ENABLED=true

# ============================================
# Admin/Jarvis Settings
# ============================================

# Discord user ID of bebe.blu for Jarvis-style admin commands
# Beboa will execute admin commands when bebe asks naturally
BEBE_USER_ID=bebe.blu
